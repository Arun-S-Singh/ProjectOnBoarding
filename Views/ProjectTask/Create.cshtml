@model ProjectOnBoarding.Models.ProjectTask

@{
    ViewData["Title"] = "Create";
}

@if (! User.Identity.IsAuthenticated)
{
    <label class=" alert-warning"><h5>You need to login to create a project. If you are not already registered , please register and login to the system.</h5> </label>
    <br>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Register">Register</a>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Login">Log in</a>
}
else
{
    <h1>Create project task</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Category</label>
                    <select asp-for="Category" class="form-select">
                        <option disabled selected>--Select Category--</option>
                        <option value="Print">Print</option>
                        <option value="Digital">Digital</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Size</label>
                    <select asp-for="Size" class="form-select">
                        <option disabled selected>--Select Size--</option>
                        <option value="A4">A4</option>
                        <option value="T1">T1</option>
                    </select>
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-2" /> |
                    <a class="btn btn-primary mt-2" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


}
