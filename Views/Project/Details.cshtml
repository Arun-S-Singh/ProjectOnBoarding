@{
    ViewBag.ProjectId = Model.Id;
}

@model ProjectOnBoarding.ViewModels.ProjectViewModel

<h1>Project Details</h1>

@if (Model is null)
{
    <p>No Project with the Id found</p>
}
else
{
    <div id="partialzone" class="mt3">
        <span class="border border-primary rounded" />
    </div>

    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" readonly />
    </div>
    <div class="mt-3">
        <input class="form-check-input" type="checkbox" asp-for="IsCompleted" disabled />
        <label class="form-check-label" asp-for="IsCompleted">
            Is Project Completed ?
        </label>
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Company</label>
        <select asp-for="CompanyId" class="form-select" id="companyId"
                asp-items="@ViewBag.companies" disabled>
        </select>
    </div>


    <div class="mt-3">
        <label class="form-label">Division</label>
        <select asp-for="DivisionId" class="form-select" id="divisionId"
                asp-items="@ViewBag.Divisions" disabled>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Brand</label>
        <select asp-for="BrandId" class="form-select" id="brandId"
                asp-items="@ViewBag.Brands" disabled>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label fw-bold">Brief</label>

        <textarea class="form-control" asp-for="Brief" readonly></textarea>

    </div>

    <div class="mt-3">
        <label class="form-label">Reference</label>
        <textarea class="form-control" asp-for="References" readonly></textarea>

    </div>

    <div class="mt-3">
        <label class="form-label">Create Date</label>
        <input type="text" class="form-control" asp-for="CreateDate" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Created By</label>
        <input type="text" class="form-control" asp-for="CreatedBy" readonly />
    </div>

    <br />

   


    <div>
        <a class="btn btn-primary mt-2" asp-controller="Project" asp-action="Edit" asp-route-id="Model.Id">Edit</a> |
        <a class="btn btn-primary mt-2" asp-action="Index">Back to List</a>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            getDocuments();
        })
        var getDocuments = function () {
            $.ajax({
                url: '@Url.Action("DocumentListPartial","Project")',
                type: 'GET',
                data: {
                projectId: @Model.Id,
                        },
                success: function (result) {
                    $('#partialzone').html(result);
                }
            })
        }

    </script>
}
