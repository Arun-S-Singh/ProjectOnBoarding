@{
}

@model ProjectOnBoarding.ViewModels.AddProjectViewModel

@if (! User.Identity.IsAuthenticated)
{
    <label class=" alert-warning"><h5>You need to login to create a project. If you are not already registered , please register and login to the system.</h5> </label>
    <br>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Register">Register</a>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Login">Log in</a>
}
else
{
    <h1>Create Project</h1>

    <form enctype="multipart/form-data" method="post">
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Company</label>
            <select asp-for="CompanyId" class="form-select" id="companyId"
                    asp-items="@ViewBag.companies">
                <option disabled selected>--Select Company--</option>
            </select>

        </div>

        <div class="mt-3">
            <label class="form-label">Division</label>
            <!--<input type="text" class="form-control" asp-for="Division" />-->
            <select asp-for="DivisionId" class="form-select" id="divisionId">
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Brand</label>
            <select asp-for="BrandId" class="form-select" id="brandId">
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label fw-bold">Brief</label>

            <textarea class="form-control" asp-for="Brief"></textarea>
            
        </div>

        <div class="mt-3">
            <label class="form-label">Reference</label>
            <textarea class="form-control" asp-for="References"></textarea>
           
        </div>
       
        <div class="mt-3">
            <button type="submit" class="btn-primary">Save</button>
        </div>
    </form>

    @section Scripts {
    <script>
        $(document).ready(function () {
            getDivisionByCompanyId();
        })
        $("#companyId").change(function () {
            getDivisionByCompanyId();
        })
        $(document).ready(function () {
            getBrandByDivisionId();
        })
        $("#divisionId").change(function () {
            getBrandByDivisionId();
        });
        var getDivisionByCompanyId = function () {
            $.ajax({
                url: '@Url.Action("GetDivisionByCompanyId", "Project")',
                type: 'GET',
                data: {
                    compamyId: $('#companyId').val(),
                },
                success: function (data) {
                    $('#divisionId').find('option').remove()

                    $(data).each(
                        function (index, item) {
                            $('#divisionId').append('<option value="' + item.id + '">' + item.name + '</option>')
                        }
                    )
                    

                }
            })
        }

        var getBrandByDivisionId = function () {
            $.ajax({
                url: '@Url.Action("GetBrandByDivisionId", "Project")',
                type: 'GET',
                data: {
                    divisionId: $('#divisionId').val(),
                },
                success: function (data) {
                    $('#brandId').find('option').remove()
                    $(data).each(
                        function (index, item) {
                            $('#brandId').append('<option value="' + item.id + '">' + item.name + '</option>')
                        }
                    )
                }
            })
        }
    </script>
    }
}

