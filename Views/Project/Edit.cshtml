@{
}

@model ProjectOnBoarding.ViewModels.ProjectViewModel

@if (!User.Identity.IsAuthenticated)
{
    <label class=" alert-warning"><h5>You need to login to edit the project. If you are not already registered , please register and login to the system.</h5> </label>
    <br>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Register">Register</a>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Login">Log in</a>
}
else
{
    <h1>Edit Project</h1>

    @if (Model is null)
    {
        <p>No Project with the Id found</p>
    }
    else
    {
        <form enctype="multipart/form-data" method="post">
            <div class="mt-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mt-3">
                <label class="form-label">Code</label>
                <input type="text" class="form-control" asp-for="Code" readonly />
            </div>
          
            <div class="form-check mt-3">
                <input class="form-check-input" type="checkbox" asp-for="IsCompleted" />
                <label class="form-check-label" asp-for="IsCompleted">
                    Is Project Completed ?
                </label>
            </div>
            <div class="mt-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <div class="mt-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" asp-for="Description" />
            </div>

            <div class="mt-3">
                <label class="form-label">Company</label>
                <select asp-for="CompanyId" class="form-select" id="companyId"
                        asp-items="@ViewBag.companies">
                </select>
            </div>


            <div class="mt-3">
                <label class="form-label">Division</label>
                <select asp-for="DivisionId" class="form-select" id="divisionId"
                        asp-items="@ViewBag.Divisions">
                </select>
            </div>

            <div class="mt-3">
                <label class="form-label">Brand</label>
                <select asp-for="BrandId" class="form-select" id="brandId"
                        asp-items="@ViewBag.Brands">
                </select>
            </div>          

            <div class="mt-3">
                <label class="form-label fw-bold">Brief</label>

                <textarea class="form-control" asp-for="Brief"></textarea>
            </div>

            <div class="mt-3">
                <label class="form-label">Reference</label>
                <textarea class="form-control" asp-for="References"></textarea>
               
            </div>
            <div class="mt-3">
                <label class="form-label">Create Date</label>
                <input type="text" class="form-control" asp-for="CreateDate" readonly />
            </div>

            <div class="mt-3">
                <label class="form-label">Created By</label>
                <input type="text" class="form-control" asp-for="CreatedBy" readonly />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn-primary">Save</button>
            </div>
        </form>
    }


    @section Scripts {
    <script>

        $("#companyId").change(function () {
            getDivisionByCompanyId();
        })
        $("#divisionId").change(function () {
            getBrandByDivisionId();
        });
        var getDivisionByCompanyId = function () {
            $.ajax({
                url: '@Url.Action("GetDivisionByCompanyId", "Project")',
                type: 'GET',
                data: {
                    compamyId: $('#companyId').val(),
                },
                success: function (data) {
                    $('#divisionId').find('option').remove()

                    $(data).each(
                        function (index, item) {
                            $('#divisionId').append('<option value="' + item.id + '">' + item.name + '</option>')
                        }
                    )
                }
            })
        }

        var getBrandByDivisionId = function () {
            $.ajax({
                url: '@Url.Action("GetBrandByDivisionId", "Project")',
                type: 'GET',
                data: {
                    divisionId: $('#divisionId').val(),
                },
                success: function (data) {
                    $('#brandId').find('option').remove()
                    $(data).each(
                        function (index, item) {
                            $('#brandId').append('<option value="' + item.id + '">' + item.name + '</option>')
                        }
                    )
                }
            })
        }
    </script>
    }

}
