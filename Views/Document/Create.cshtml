@model ProjectOnBoarding.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Create";
}

@if (!User.Identity.IsAuthenticated)
{
    <label class=" alert-warning"><h5>You need to login to delete the division. If you are not already registered , please register and login to the system.</h5> </label>
    <br>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Register">Register</a>
    <a class="btn btn-primary mt-1" href="/Identity/Account/Login">Log in</a>
}
else
{
    <h1>Add document to project</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="Create">

                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                </div>
                
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-select">
                        <option disabled selected>--Select File type--</option>
                        <option value="Brief">Brief</option>
                        <option value="Reference">Reference</option>
                        <option value="Collateral">Collateral</option>
                    </select>
                    
                </div>
                <div class="form-group">
                    <label asp-for="FileName" class="control-label"></label>
                    
                    <div class="custom-file mt-2">
                        <input asp-for="File" class="form-control custom-file-control" />
                    </div>
                    
                </div>
               
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-2" /> |
                    <a class="btn btn-primary mt-2" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
}

